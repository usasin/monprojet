<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>CFBundleDevelopmentRegion</key>
  <string>$(DEVELOPMENT_LANGUAGE)</string>

  <key>CFBundleDisplayName</key>
  <string>Ai Prospect Gps</string>

  <key>CFBundleExecutable</key>
  <string>$(EXECUTABLE_NAME)</string>

  <key>CFBundleIdentifier</key>
  <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

  <key>CFBundleInfoDictionaryVersion</key>
  <string>6.0</string>

  <key>CFBundleName</key>
  <string>ai_prospect_gps</string>

  <key>CFBundlePackageType</key>
  <string>APPL</string>

  <key>CFBundleShortVersionString</key>
  <string>$(FLUTTER_BUILD_NAME)</string>

  <key>CFBundleSignature</key>
  <string>????</string>

  <key>CFBundleVersion</key>
  <string>$(FLUTTER_BUILD_NUMBER)</string>

  <key>LSRequiresIPhoneOS</key>
  <true/>

  <key>UILaunchStoryboardName</key>
  <string>LaunchScreen</string>

  <key>UIMainStoryboardFile</key>
  <string>Main</string>

  <key>UISupportedInterfaceOrientations</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
    <string>UIInterfaceOrientationLandscapeLeft</string>
    <string>UIInterfaceOrientationLandscapeRight</string>
  </array>

  <key>UISupportedInterfaceOrientations~ipad</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
    <string>UIInterfaceOrientationPortraitUpsideDown</string>
    <string>UIInterfaceOrientationLandscapeLeft</string>
    <string>UIInterfaceOrientationLandscapeRight</string>
  </array>

  <key>CADisableMinimumFrameDurationOnPhone</key>
  <true/>
  <key>UIApplicationSupportsIndirectInputEvents</key>
  <true/>

  <!-- ===== Ajouts requis Prospecto ===== -->

  <!-- Export compliance (HTTPS/TLS uniquement) -->
  <key>ITSAppUsesNonExemptEncryption</key>
  <false/>

  <!-- ATT (AdMob) -->
  <key>NSUserTrackingUsageDescription</key>
  <string>Votre autorisation nous permet d’afficher des publicités plus pertinentes via AdMob. Aucune donnée n’est vendue.</string>

  <!-- Localisation (utilisation au premier plan) -->
  <key>NSLocationWhenInUseUsageDescription</key>
  <string>La localisation est utilisée pour optimiser votre itinéraire et planifier vos visites à proximité.</string>

  <!-- ⚠️ AJOUTS pour lever ITMS-90683 -->
  <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
  <string>Prospecto peut accéder à votre position même en arrière-plan pour maintenir l’itinéraire et le reporting à jour durant vos déplacements.</string>
  <key>NSLocationAlwaysUsageDescription</key>
  <string>Prospecto a besoin d’un accès permanent à la localisation pour suivre vos visites même si l’app n’est pas au premier plan.</string>
  <!-- /AJOUTS -->

  <!-- AdMob App ID -->
  <key>GADApplicationIdentifier</key>
  <string>$(ADMOB_APP_ID)</string>

  <!-- Google Sign-In : schéma d’URL -->
  <key>CFBundleURLTypes</key>
  <array>
    <dict>
      <key>CFBundleTypeRole</key>
      <string>Editor</string>
      <key>CFBundleURLSchemes</key>
      <array>
        <string>com.googleusercontent.apps.163745254135-3q1q92pq15663uc2gkg4nqvfk8jkjdfp</string>
      </array>
    </dict>
  </array>

  <!-- Autoriser des schemes Google -->
  <key>LSApplicationQueriesSchemes</key>
  <array>
    <string>google</string>
    <string>com.googleusercontent.apps.163745254135-3q1q92pq15663uc2gkg4nqvfk8jkjdfp</string>
  </array>

</dict>
</plist>
